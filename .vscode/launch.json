{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "‚è©vPython Debugger: build_manager with 'all'",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Common/build_manager.py",
            "args": [
                "all"
            ],
            "env": {
                // "ORION_GRAPH_SPEC": "mw-monarch.yaml",
                "ORION_GRAPH_SPEC": "default-graph-spec.yml",
                "PYTHONPATH": "${env:PYTHONPATH};${workspaceFolder}",
                "EDGE_NORMALIZATION_ENDPOINT": "https://bl-lookup-sri.renci.org/",
                "NODE_NORMALIZATION_ENDPOINT": "https://nodenormalization-sri.renci.org/",
                "NAME_RESOLVER_ENDPOINT": "https://name-resolution-sri.renci.org/",
                "ORION_LOGS": "${workspaceFolder}/Data/ORION_logs/",
                "ORION_GRAPHS": "${workspaceFolder}/Data/ORION_graphs/",
                "ORION_STORAGE": "${workspaceFolder}/Data/ORION_storage/"
            }
        },
    ]
}